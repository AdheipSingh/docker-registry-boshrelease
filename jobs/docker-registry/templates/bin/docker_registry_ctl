#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/docker_registry/helpers/ctl_setup.sh 'docker_registry'

export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    export PATH=/var/vcap/packages/docker_registry/vendor/bin:$PATH

    export SETTINGS_FLAVOR=
    export DOCKER_REGISTRY_CONFIG=$JOB_DIR/config/docker_registry.yml
    export PORT_WWW=$PORT

    cd /var/vcap/packages/docker_registry
    exec chpst -u vcap:vcap \
        gunicorn -w 1 wsgi:application \
            >>$LOG_DIR/$JOB_NAME.stdout.log \
            2>>$LOG_DIR/$JOB_NAME.stderr.log

    # store pid in $PIDFILE
    echo $! > $PIDFILE
    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: docker_registry_ctl {start|stop}"

    ;;

esac
exit 0