#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/docker_registry/helpers/ctl_setup.sh 'docker_registry'

export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    export PATH=/var/vcap/packages/docker_registry/vendor/bin:$PATH

    export PYTHONPATH=/var/vcap/packages/setuptools/lib/python2.7/site-packages:${PYTHONPATH:-}
    export PYTHONPATH=/var/vcap/packages/pip/lib/python2.7/site-packages:$PYTHONPATH
    export PYTHONPATH=/var/vcap/packages/docker_registry/vendor/lib/python2.7/site-packages/:$PYTHONPATH

    cp -a /var/vcap/packages/python-dependencies/apt/usr/lib/* /usr/lib
    cp -a /var/vcap/packages/python-dependencies/apt/usr/include/* /usr/include

    cp -a /var/vcap/packages/docker_registry/config/boto.cfg /etc/boto.cfg

    export SETTINGS_FLAVOR="local"
    export DOCKER_REGISTRY_CONFIG=$JOB_DIR/config/docker_registry.yml
    export PORT_WWW=$PORT

    cd /var/vcap/packages/docker_registry

    exec chpst -u vcap:vcap \
        gunicorn -w 8 wsgi:application --pid=$PIDFILE \
          -c $JOB_DIR/config/gunicorn_config.py \
            >>$LOG_DIR/$JOB_NAME.stdout.log \
            2>>$LOG_DIR/$JOB_NAME.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: docker_registry_ctl {start|stop}"

    ;;

esac
exit 0